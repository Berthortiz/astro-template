---

<section class="max-w-4xl rounded-2xl px-5 py-36 md:mx-auto">
    <SectionTitle title="Preguntas Frecuentes" class="mb-10" />
    <ul>
        {
            faqs.map((faq) => (
                <li class="mb-4">
                    <details class="group rounded-xl border border-transparent bg-zinc-800/50 transition-all duration-300 hover:border-[#00d7c9] hover:shadow-xl">
                        <summary class="focus-visible:ring-[#00d7c9]-400 duration-600 flex cursor-pointer select-none items-center gap-3 px-6 py-4 text-sm font-bold text-[red] outline-none transition-all focus-visible:ring-2 group-open:text-pink-300 lg:text-lg">
                            <svg
                                class="mr-1 inline-block h-7 w-7 shrink-0 text-[#00d7c9] transition-transform duration-300 group-open:rotate-180 lg:h-5 lg:w-5"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="3"
                                viewBox="0 0 24 24"
                                aria-hidden="true"
                            >
                                <path d="M6 9l6 6 6-6" />
                            </svg>
                            {faq.question}
                        </summary>
                        <div class="animate-fadeInFaq px-8 pb-4 pt-1 font-sans text-base leading-relaxed text-white opacity-95 transition-all duration-300 [text-transform:none]">
                            <p set:html={faq.answer} />
                        </div>
                    </details>
                </li>
            ))
        }
    </ul>
    {/* Animaci√≥*/}
    <style>
        @keyframes fadeInFaq {
            from {
                opacity: 0;
                transform: translateY(-8px);
            }
            to {
                opacity: 0.95;
                transform: translateY(0);
            }
        }
        .animate-fadeInFaq {
            animation: fadeInFaq 0.3s;
        }
    </style>
</section>
